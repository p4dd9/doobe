<div class="navigation-bar"><a href="/"><i class="fa fa-arrow-left"></i></a></div>

<form class="task-form">
    <ol class="task-form-list">
        <li class="task__form-item">
            <div class="form-name">
                <label for="task-name">Name</label>
            </div>
            <div class="form-input">
                <input type="text" id="task-name" placeholder="Name of the task..." autocomplete="off" required>
            </div>
        </li>

        <li class="task__form-item">
            <div class="form-name">
                <label for="remaining-days">Days (1 - 21)</label>
            </div>
            <div class="form-input">
                <div class="form-input__days-holder">
                </div>
                <input type="number" id="remaining-days" min="1" max="21" required>
            </div>
        </li>

        <li class="task__form-item">
            <div class="form-name">
                <div>
                    <label for="workload" class="workload">Workload</label>
                </div>
            </div>
            <div class="form-input">
                <div class="workload-numbers"><span class="workload-num selected">1</span>
                    <span class="workload-num">2</span>
                    <span class="workload-num">3</span>
                    <span class="workload-num">5</span> <span class="workload-num">8</span> <span class="workload-num">13</span>
                    <span class="workload-num">21</span></div>
                <!--<input id="workload" type="range" min="0" max="6">-->
            </div>
        </li>

        <li class="task__form-item">
            <div class="form-name">
                <div>
                    <label for="task-lecture" class="lectures">Lecture</label>
                </div>
            </div>
            <div class="form-input asdf-form">
                <select>
                    <option data-id="general">General</option>
                    {{#each lectures}}
                        <option data-id="{{this._id}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
        </li>

        <li>
            <div class="form-name">
                <input type="submit" id="form-submit" value="Save task">
            </div>
        </li>
    </ol>
</form>